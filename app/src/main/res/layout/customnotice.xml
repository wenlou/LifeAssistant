<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notice"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:background="#37383D"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/widget_album"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/remote_top"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:orientation="horizontal"
            android:paddingLeft="12dp"
            android:paddingTop="9dp">

            <TextView
                android:id="@+id/widget_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:lines="1"
                android:textColor="#ded6d6"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/widget_artist"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:ellipsize="end"
                android:textColor="#A0A0A0"
                android:textSize="12sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/remote_top"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:orientation="horizontal"
            android:paddingBottom="1dp">

            <ImageView
                android:id="@+id/widget_prev"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/widget_prev" />

            <ImageView
                android:id="@+id/widget_play"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_weight="1"
                android:scaleType="centerInside" />

            <ImageView
                android:id="@+id/widget_next"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:src="@drawable/widget_next" />

        </LinearLayout>

    </RelativeLayout>

    <ImageView
        android:id="@+id/widget_close"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_margin="5dp"
        android:scaleType="centerInside"
        android:src="@drawable/widget_close" />

</LinearLayout>